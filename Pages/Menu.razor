@page "/menu"
@inject NavigationManager Nav

<div class="min-h-screen bg-[#fcfcfc] flex flex-col relative font-sans text-gray-800 pb-20">
    <header class="relative pt-12 px-6 md:px-12 max-w-7xl mx-auto w-full mb-16">
      <button @onclick='() => Nav.NavigateTo("/")' class="flex items-center text-gray-500 hover:text-black transition group mb-12">
        <LucideIcon Name="LucideIcons.ArrowLeft" class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" />
        <span class="uppercase text-sm tracking-widest font-semibold">Back</span>
      </button>
      <h1 class="text-6xl md:text-8xl font-serif font-bold text-gray-900">Gourmet <span class="text-gold">Bar</span></h1>
    </header>

    <main class="max-w-7xl mx-auto w-full px-6 md:px-12 space-y-24">
        <!-- Appetizers -->
        <section>
            <div class="flex items-center mb-12">
                <h2 class="text-4xl font-serif mr-6">Appetizers</h2>
                <div class="h-px bg-gray-300 flex-grow"></div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-16">
                @foreach(var item in Appetizers)
                {
                    <div class="group">
                        <div class="flex justify-between items-baseline mb-2">
                            <h3 class="font-bold text-lg group-hover:text-gold transition">@item.Name</h3>
                            <span class="font-serif text-xl ml-4">@item.Price</span>
                        </div>
                        <p class="text-gray-500 text-sm leading-relaxed">@item.Desc</p>
                    </div>
                }
            </div>
        </section>
        
        <!-- Specialties -->
        <section class="grid grid-cols-1 lg:grid-cols-12 gap-12">
            <div class="lg:col-span-8">
               <div class="flex items-center mb-12">
                <h2 class="text-4xl font-serif mr-6">Soups & Broths</h2>
                <div class="h-px bg-gray-300 flex-grow"></div>
              </div>
              <div class="space-y-12">
                @foreach (var item in Soups)
                {
                    <div class="group border-b border-gray-100 pb-8 last:border-0">
                      <div class="flex justify-between items-baseline mb-2">
                        <h3 class="font-bold text-lg group-hover:text-gold transition">@item.Name</h3>
                        <span class="font-serif text-xl">@item.Price</span>
                      </div>
                      <p class="text-gray-500 text-sm leading-relaxed max-w-2xl">@item.Desc</p>
                    </div>
                }
              </div>
            </div>
    
            <!-- Specialties Highlight -->
            <div class="lg:col-span-4 relative mt-12 lg:mt-0">
              <div class="absolute inset-0 border-2 border-gray-200 transform translate-x-4 translate-y-4"></div>
              <div class="relative bg-white border border-gray-200 p-8 shadow-sm h-full">
                <h3 class="text-2xl font-serif mb-8 text-center text-gold">Specialties</h3>
                <div class="space-y-10">
                  @foreach (var item in Specialties)
                  {
                    <div>
                        <div class="flex justify-between items-baseline mb-1">
                          <h4 class="font-bold text-sm uppercase tracking-wide">@item.Name</h4>
                          <span class="font-serif text-lg">@item.Price</span>
                        </div>
                        <p class="text-xs text-gray-500 leading-relaxed">@item.Desc</p>
                    </div>
                  }
                </div>
              </div>
            </div>
        </section>
    </main>
</div>

@code {
    record MenuItem(string Name, string Desc, string Price);

    List<MenuItem> Appetizers = new() {
        new MenuItem("Truffle-infused Arancini", "Creamy risotto balls with a hint of truffle.", "21,00"),
        new MenuItem("Seared Scallops", "Citrus reduction glaze.", "25,00"),
        new MenuItem("Goat Cheese Crostini", "Whipped herbed goat cheese.", "35,00")
    };

    List<MenuItem> Soups = new() {
        new MenuItem("Lobster Bisque", "Rich and velvety lobster bisque.", "18,00"),
        new MenuItem("Wild Mushroom Consomm√©", "Clear broth infused with wild mushrooms.", "24,00")
    };

    List<MenuItem> Specialties = new() {
        new MenuItem("Sous Vide Filet Mignon", "Accompanied by truffle mashed potatoes.", "54,00"),
        new MenuItem("Chilean Sea Bass", "Seared, with saffron-infused sauce.", "61,00")
    };
}