@page "/"

<!-- Hero Section -->
<section class="relative h-screen flex items-center justify-center overflow-hidden bg-gray-50">
    <div class="relative z-10 text-center px-4">
      <h2 class="text-sm font-bold tracking-[0.3em] uppercase mb-4 text-gold">The</h2>
      <h1 class="text-6xl md:text-8xl font-serif font-bold text-dark mb-6 relative">
        <span class="block transform -rotate-2">Culinary</span>
        <span class="block transform rotate-3 ml-12 text-gold">Heaven</span>
      </h1>
      <div class="mt-8 flex flex-col items-center">
        <div class="h-1 w-24 bg-black mb-4"></div>
        <p class="text-xl tracking-widest uppercase font-light">Gastro Bar</p>
      </div>
    </div>
    <!-- Add your background image logic here or in CSS -->
</section>

<!-- Delicatessen / CTA -->
<section id="reservations" class="relative py-24 bg-gray-900 text-white text-center">
    <div class="relative z-20 max-w-4xl mx-auto px-6">
      <h2 class="text-5xl font-serif mb-6">Delicatessen</h2>
      <p class="text-xl italic mb-10 font-light">From the sea to your palate</p>
      <a href="reservation" class="inline-block border-2 border-white text-white px-8 py-3 hover:bg-white hover:text-black transition duration-300 uppercase tracking-widest text-sm font-bold">
        Reserve a Table
      </a>
    </div>
</section>

<!-- Events -->
<section id="opening" class="py-20 bg-gray-50 relative">
    <div class="max-w-6xl mx-auto px-6 text-center md:text-right">
       <h2 class="text-6xl font-serif mb-4">Grand Opening</h2>
       <p class="text-sm font-bold uppercase mb-1">Celebrate with us</p>
       <a href="tickets" class="inline-block bg-black text-white px-8 py-3 uppercase text-xs tracking-widest hover:bg-gold transition">
        Get your ticket
      </a>
    </div>
</section>

<!-- Footer -->
<footer id="contact" class="bg-white pt-20 pb-10 border-t border-gray-200 text-center">
    <h2 class="text-4xl font-serif mb-4">Contact</h2>
    <p>&copy; 2026 The Culinary Heaven Group</p>
</footer>